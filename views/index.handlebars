                </div>

                <button type="button" class="btn btn-secondary" style = "margin-left: 7px;" data-toggle="modal" data-target="#comfirmFlagModal">
                  <span class="glyphicon glyphicon-thumbs-down" aria-hidden="true"> </span> <span id="flagCount">4</span>
                </button>

                <!-- Modal -->
                <div class="modal fade" id="comfirmFlagModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Feedback</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        Are you sure you want to flag this hotspot?
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
